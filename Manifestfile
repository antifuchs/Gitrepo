# -*- puppet -*-
# I will admit this is cheating (there is no convention to call puppet
# site.pp files Manifestfile), but who am I kidding.

node default {
  include 'docker'
}
docker::image { 'base': }
docker::run { 'helloworld':
  image   => 'base',
  command => '/bin/sh -c "while true; do echo hello world; sleep 1; done"',
}
